#include <iostream>
using namespace std;

int main(){
  int bilangan [50],i,a,bil,jumlah=0,x;

  cout <<"Masukan jumlah bilangan = ";
  cin >> i;

  for (x=0;x<i;x++){
    cout <<"Masukan indeks ke-"<<x<<" : ";
    cin >> bilangan [x];
  }

  cout <<"Deretan bilangan adalah = ";
  for (x=0;x<i;x++){
    cout << bilangan[x]<< " ";
  }

  cout <<"\nMasukan biangan yang akan dicari : ";
  cin >>bil;

  for (x=0;x<i;x++){
    if (bilangan[x] == bil){
      cout <<"Bilangan " <<bil<< " ditemukan pada indeks ke : " <<x;
      break;
    }
  }
  for (x=0;x<i;x++){
    if (bilangan[x] == bil){
      jumlah++;
    }
  }
  cout <<"\nBilangin "<<bil<< "ditemukan sebanyak "<<jumlah<<"kali ";

  return 0;

  
}
